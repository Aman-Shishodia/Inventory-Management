@model Inventory_Management.Models.Product

@{
    ViewBag.Title = "DeleteProduct";
}

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayName("Product Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductQty)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger mt-2" /> 
            @Html.ActionLink("Cancel", "DisplayProduct","Product",new {@class="btn btn-danger mt-2"})
        </div>
    }
</div>
