@model Inventory_Management.Models.Product

@{
    ViewBag.Title = "DetailsProduct";
}


<div>
    <h4>Product details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayName("Product Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductQty)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "UpdateProduct", new { id = Model.Id },new {@class="btn btn-primary"}) 
    @Html.ActionLink("Cancel", "DisplayProduct",new { },new {@class="btn btn-danger"})
</p>
