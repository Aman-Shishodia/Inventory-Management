@model Inventory_Management.Models.Sale

@{
    ViewBag.Title = "DeatilsSale";
}


<div>
    <h4>Sale details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Sale Product")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SaleProduct)
        </dd>

        <dt>
            @Html.DisplayName("Sale Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SaleQty)
        </dd>

        <dt>
            @Html.DisplayName("Sale Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SaleDate)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "UpdateSale", new { id = Model.Id }, new { @class = "btn btn-primary mt-2" })
    @Html.ActionLink("Cancel", "DisplaySale", "", new { @class = "btn btn-danger mt-2" })
</p>
