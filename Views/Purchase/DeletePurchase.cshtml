@model Inventory_Management.Models.Purchase

@{
    ViewBag.Title = "DeletePurchase";
}


<h4>Are you sure you want to delete this?</h4>
<div>
       <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Purchase Product")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseProduct)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseQty)
        </dd>

        <dt>
            @Html.DisplayName("Purchase Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PurchaseDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-danger mt-2" /> 
    @Html.ActionLink("Cancel", "DisplayPurchase", "", new { @class = "btn btn-danger mt-2" })
</div>
    }
</div>
